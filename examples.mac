  [bc,   0,  0, -a],
  [bn,  -1,  0, -a],
  [be,   0,  1, -a],
  [bnw, -1, -1, -a]
  ],
  optimize_stencil([rhs, lhs])
  );

block([a, b, c, d, e],
  rhs : [
  diff(u(x, y), x, 2) + diff(u(x, y), y, 2),
  [1, 0, 0],
  [d, -h,  0],
  [d,  h,  0],
