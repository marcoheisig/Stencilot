block([a,b,c],
  return(),
  rhs : [diff(u(x), x, 2), [1, 0], [c, -1], [c, 1]],
  lhs : [u(x), [a, 0], [b, -1], [b, 1]],
  optimize_stencil([lhs, rhs]));

/* 15 + 15 point stencil with compressed z-axis */
block([t, phi, a,
  r, rmc, rme, rmw, rms, rmn, rmnw, rmse, rtc, rtw, rts, rtse, rbc, rbn, rbe, rbnw,
  mc,  me,  mw,  ms,  mn,  mnw,  mse,  tc,  tw,  ts,  tse,  bc,  bn,  be,  bnw],
  a : 1,
  return(),
  rhs : [
  diff(u(x, y, z), x, 2)
  + diff(u(x, y, z), y, 2)
  + diff(u(x, y, z), z, 2),
  [rmc,   0,  0,  0],
  [rme,   0,  1,  0],
  [rmw,   0, -1,  0],
  [rms,   1,  0,  0],
  [rmn,  -1,  0,  0],
  [rmnw, -1, -1,  0],
  [rmse,  1,  1,  0],
  [rtc,   0,  0,  a],
  [rtw,   0, -1,  a],
  [rts,   1,  0,  a],
  [rtse,  1,  1,  a],
  [rbc,   0,  0, -a],
  [rbn,  -1,  0, -a],
  [rbe,   0,  1, -a],
  [rbnw, -1, -1, -a]
  ],
  lhs : [
  u(x, y, z),
  [mc,   0,  0,  0],
  [me,   0,  1,  0],
  [mw,   0, -1,  0],
  [ms,   1,  0,  0],
  [mn,  -1,  0,  0],
